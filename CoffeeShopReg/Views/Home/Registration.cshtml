@{
    ViewData["Title"] = "Registration";
}
<div class="text-center">
    <h1 class="display-3">Coffee Shop Registration</h1>

    <form action="/Home/Summary">
        <label for="name">First Name:</label>
        <input type="text" name="firstName" value="" />
        <br/> <br/>
        <label for="name">Last Name:</label>
        <input type="text" name="lastName" value="" />
        <br/> <br/>
        <label for="email">  Email:</label>
        <input type="text" name="email" value="" />
        <br/> <br/>
        <label for="password">Password:</label>
        <input type="password" name="password" value="" />
        <br/><br/>
        <label for="coffee">Coffee Preference:</label>
        <select id="coffee" name="coffee">
            <option value="Black">Black</option>
            <option value="With Cream">With Cream</option>
            <option value="With Sugar">With Sugar</option>
            <option value="With Cream & Sugar">With Cream & Sugar</option>
        </select><br /><br />
        Please select your age range: 
        <input type="radio" id="range1" name="ageRange" value="Under 25">
        <label for="range1">Under 25</label> &nbsp;&nbsp;
        <input type="radio" id="range2" name="ageRange" value="26-50">
        <label for="range2">26-50</label>&nbsp;&nbsp;
        <input type="radio" id="range3" name="ageRange" value="Over 50">
        <label for="range3">Over 50</label><br /><br />
        <input type="submit" name="submit" value="Submit" />
    </form>
</div>